{{#if this.player.item}}
  <div local-class="player {{if this.auto "auto"}}">
    <div local-class="top">
      <button type="button" {{on "click" this.player.stop}}>
        <SvgIcon @name="x" />
      </button>
      <button type="button" {{on "click" this.toggleAuto}}>
        <SvgIcon @name={{if this.auto "minimize-2" "maximize-2"}} />
      </button>
      <img src={{this.player.item.subscription.channel.thumbnail}} alt={{this.player.item.subscription.channel.title}}>
      <span local-class="title">
        {{this.player.item.subscription.channel.title}}
        &mdash;
        {{this.player.item.video.title}}
      </span>
    </div>
    <EmberYoutube
      @ended={{this.player.embedEnded}}
      @height={{this.settings.sizeHeight}}
      @playbackRateChanged={{this.playbackRateChanged}}
      @playerVars={{hash autoplay=1 rel=0}}
      @speed={{this.speed}}
      @width={{this.settings.sizeWidth}}
      @ytid={{this.player.item.video.apiId}}
    />
  </div>
{{/if}}
